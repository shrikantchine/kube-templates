apiVersion: apps/v1
kind: Deployment
metadata:
  name: kafka-broker
spec:
  replicas: 1
  selector:
    matchLabels:
      app: kafka-broker
  template:
    metadata:
      labels:
        app: kafka-broker
    spec:
      containers:
      - name: kafka-broker
        image: bitnami/kafka
        ports:
        - containerPort: 9092
        env:
        - name: KAFKA_BROKER_ID 
          value: 1
        - name: KAFKA_CFG_LISTENERS
          value: PLAINTEXT://:9092
        - name: KAFKA_CFG_ADVERTISED_LISTENERS
          value: PLAINTEXT://127.0.0.1:9092
        - name: KAFKA_CFG_ZOOKEEPER_CONNECT
          value: zk-cs:2181
        - name: ALLOW_PLAINTEXT_LISTENERS
          value: yes
